@model ControlMDBI.Models.Sede

@{
    ViewData["Title"] = "Agregar Nueva Sede";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h3 class="mb-0 ">
                <i class="fas fa-user-plus me-2"></i>
                Agregar Nueva Sede
            </h3>

            <p class="text-muted mb-0">Complete el formulario para crear una Sede</p>

        </div>
    </div>
    <!-- Alertas -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-exclamation-triangle fa-lg text-danger"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h6 class="alert-heading mb-1 fw-bold">¡Error!</h6>
                    <p class="mb-0">@TempData["ErrorMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-check-circle fa-lg text-success"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h6 class="alert-heading mb-1 fw-bold">¡Éxito!</h6>
                    <p class="mb-0">@TempData["SuccessMessage"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header bg-blueMuni-600 text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-circle me-2"></i>
                        Formulario
                    </h5>
                    <p class="text-muted mb-0">Obligatorio (<span class="text-danger">*</span>)</p>
                </div>
                <div class="card-body">
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-3">

                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" autocomplete="off" />
                                    <label asp-for="Nombre" class="form-label"><i class="fa-solid fa-building-circle-check me-2"></i>Nombre <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">

                                    <input asp-for="Direccion" class="form-control" placeholder="Nombre" autocomplete="off" />
                                    <label asp-for="Direccion" class="form-label"><i class="fa-solid fa-building-flag me-2"></i>Direccion <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="container-fluid">
                                    <div class="row d-flex align-items-center justify-content-center">
                                        <div class="col-md-6 d-flex justify-content-center">
                                            <button type="submit" class="btn btn-outline-success">
                                                <i class="fas fa-user-plus me-2"></i>
                                                Agregar
                                            </button>
                                            <a asp-action="Index" class="btn btn-danger ms-2">
                                                <i class="fas fa-times me-2"></i>
                                                Cancelar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


