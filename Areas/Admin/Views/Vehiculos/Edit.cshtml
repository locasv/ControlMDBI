@model ControlMDBI.Models.Vehiculo

@{
    ViewData["Title"] = "Detalles Vehiculo";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle fa-lg text-danger"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h6 class="alert-heading mb-1 fw-bold">¡Error!</h6>
                <p class="mb-0">@TempData["ErrorMessage"]</p>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4" role="alert">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <i class="fas fa-check-circle fa-lg text-success"></i>
            </div>
            <div class="flex-grow-1 ms-3">
                <h6 class="alert-heading mb-1 fw-bold">¡Éxito!</h6>
                <p class="mb-0">@TempData["SuccessMessage"]</p>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}



<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow">
            <div class="card-header bg-blueMuni-600 text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-circle me-2"></i>
                    Informacion Vehiculo
                </h5>
                <p class="text-muted mb-0">Obligatorio (<span class="text-danger">*</span>)</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row d-flex align-items-center justify-content-center">
                        <div class="col-md-4">

                            <input type="hidden" asp-for="IdVehiculo" />
                            <div class="form-floating mb-3">

                                <input asp-for="Placa" class="form-control" placeholder="Placa" autocomplete="off" />
                                <label asp-for="Placa" class="form-label"></label>
                                <span asp-validation-for="Placa" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">

                                <input asp-for="Marca" class="form-control" placeholder="Marca" autocomplete="off" />
                                <label asp-for="Marca" class="form-label"></label>
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Modelo" class="form-control" placeholder="Modelo" autocomplete="off" />
                                <label asp-for="Modelo" class="form-label"></label>
                                <span asp-validation-for="Modelo" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Color" class="form-control" placeholder="Color" autocomplete="off" />
                                <label asp-for="Color" class="form-label"></label>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">

                                <select asp-for="Estado" class="form-select" asp-items="@(new SelectList(Enum.GetNames(typeof(ListaEstadoVehiculo))))">
                                    <option value="" selected disabled>--Seleccione Estado--</option>
                                </select>
                                <label asp-for="Estado" class="form-label"></label>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">

                                <select asp-for="IdSede" class="form-select" asp-items="ViewBag.IdSede"></select>
                                <label asp-for="IdSede" class="form-label"></label>
                                <span asp-validation-for="IdSede" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row d-flex align-items-center justify-content-center">
                                <div class="col-md-4 d-flex justify-content-center">
                                    <button type="submit" value="Save" class="btn btn-outline-success me-2">
                                        <i class="fa-solid fa-floppy-disk me-2"></i>Guardar
                                    </button>
                                    <a asp-action="Index" class="btn btn-danger">
                                        <i class="fa-solid fa-circle-arrow-left"></i> Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



