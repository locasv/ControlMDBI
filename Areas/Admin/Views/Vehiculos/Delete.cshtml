@model ControlMDBI.Models.Vehiculo

@{
    ViewData["Title"] = "Eliminar";
}


<div class="alert alert-warning">
    <h3>¿Está seguro de que desea eliminar este vehículo?</h3>
    <p>Esta acción no se puede deshacer.</p>
</div>
<div class="card">
    <div class="card-header">
        Detalles de Vehículo
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Placa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Placa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Marca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Marca)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estado)
                @if (Model.Estado == "Activo")
                {
                    <span class="badge rounded-pill bg-success">Activo</span>
                }
                else if (Model.Estado == "Inactivo")
                {
                    <span class="badge rounded-pill bg-danger">Inactivo</span>
                }
                else
                {
                    <span class="badge rounded-pill bg-blueMuni-400">Mantenimiento</span>
                }

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sede)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sede.Direccion)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdVehiculo" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-outline-blueMuni">
                <i class="fa-solid fa-circle-arrow-left"></i> Regresar
            </a>
        </form>
    </div>
</div>
