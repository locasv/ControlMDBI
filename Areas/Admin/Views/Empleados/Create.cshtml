@model ControlMDBI.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Empleado</h4>
<hr />
<div class="row table-responsive">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="DNI" class="form-control" placeholder="DNI" autocomplete="off" />
                <label asp-for="DNI" class="form-label"></label>
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                
                <input asp-for="Nombres" class="form-control" placeholder="Nombres" autocomplete="off" />
                <label asp-for="Nombres" class="form-label"></label>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
               
                <input asp-for="Apellidos" class="form-control" placeholder="Apellidos" autocomplete="off" />
                <label asp-for="Apellidos" class="form-label"></label>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
               
                <input asp-for="Direccion" class="form-control" placeholder="Dirección" autocomplete="off" />
                <label asp-for="Direccion" class="form-label">Dirección</label>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
               
                <input asp-for="Correo" class="form-control" placeholder="Correo" autocomplete="off" />
                <label asp-for="Correo" class="form-label"></label>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                
                <input asp-for="Cargo" class="form-control" placeholder="Cargo" autocomplete="off" />
                <label asp-for="Cargo" class="form-label"></label>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                
                <input asp-for="Unidad" class="form-control" placeholder="Unidad" autocomplete="off" />
                <label asp-for="Unidad" class="form-label"></label>
                <span asp-validation-for="Unidad" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" /> Activo
                </label>
            </div>
            <div class="form-floating mb-3">
                
                <select asp-for="IdSede" class="form-select" asp-items="ViewBag.IdSede">
                    <option value="">-- Seleccione un Sede --</option>
                </select>
                <label asp-for="IdSede" class="form-label">Sede</label>
                <span asp-validation-for="IdSede" class="text-danger"></span>
            </div>

         
            <div class="form-floating mb-3 d-flex gap-2">
                <input type="submit" value="Crear" class="btn btn-blueMuni" />
               
                <a asp-action="Index" class="btn btn-outline-blueMuni">
                    <i class="fa-solid fa-circle-arrow-left"></i> Regresar
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


