                type: 'GET',
                dataType: 'json',
                success: function (response) {
                     // Ahora accedemos a las propiedades con seguridad
                const nombreUsuario = response.data.nombreUsuario || 'No disponible';
                const rol = response.data.rol || 'No disponible';
